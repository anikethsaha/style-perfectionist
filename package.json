{
  "name": "perfectionist",
  "version": "2.1.3",
  "description": "Beautify CSS files.",
  "main": "dist/index.js",
  "bin": {
    "perfectionist": "bin/cmd.js"
  },
  "files": [
    "bin",
    "LICENSE-MIT",
    "dist"
  ],
  "scripts": {
    "copy-fixtures": "ncp src/__tests__/fixtures dist/__tests__/fixtures",
    "prepublish": "de dist && babel src --out-dir dist --ignore /__tests__/",
    "test": "babel src --out-dir dist && npm run copy-fixtures && ava dist/__tests__/"
  },
  "keywords": [
    "beautify",
    "css",
    "format",
    "postcss",
    "postcss-plugin",
    "pretty"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ben-eb/perfectionist",
  "author": {
    "name": "Ben Briggs",
    "email": "beneb.info@gmail.com",
    "url": "http://beneb.info"
  },
  "repository": "ben-eb/perfectionist",
  "dependencies": {
    "comment-regex": "^1.0.0",
    "defined": "^1.0.0",
    "minimist": "^1.2.0",
    "object-assign": "^4.0.1",
    "postcss": "^5.0.8",
    "postcss-scss": "^0.1.2",
    "read-file-stdin": "^0.2.0",
    "string.prototype.repeat": "^0.2.0",
    "write-file-stdout": "0.0.2"
  },
  "devDependencies": {
    "ava": "^0.10.0",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015-loose": "^6.1.4",
    "babel-preset-stage-0": "^6.3.13",
    "del-cli": "^0.1.2",
    "ncp": "^2.0.0"
  }
}
