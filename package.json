{
  "name": "style-perfectionist",
  "version": "1.0.0-alpha.0",
  "description": "format your styles",
  "main": "dist/index.js",
  "browser": "./standalone.js",
  "unpkg": "./standalone.js",
  "bin": {
    "style-perfectionist": "bin/cmd.js"
  },
  "files": [
    "bin",
    "LICENSE-MIT",
    "dist"
  ],
  "engines": {
    "node": ">=10.18.0"
  },
  "scripts": {
    "lint": "eslint src --fix",
    "prepublish": "npm run build",
    "build": "del-cli dist && cross-env BABEL_ENV=publish babel src --out-dir dist --ignore \"**/__tests__/\" && npm run  build:standalone",
    "build:standalone": "webpack",
    "report": "nyc report --reporter=html",
    "coverage": "cross-env BABEL_ENV=test nyc ava",
    "test": "cross-env BABEL_ENV=test  ava"
  },
  "keywords": [
    "beautify",
    "css",
    "format",
    "postcss",
    "postcss-plugin",
    "pretty"
  ],
  "license": "MIT",
  "homepage": "https://github.com/anikethsaha/style-perfectionist",
  "author": {
    "name": "Aniketh Saha",
    "email": "anik220798@gmail.com",
    "url": "https://twitter.com/__ANIX__"
  },
  "repository": "anikethsaha/style-perfectionist",
  "dependencies": {
    "comment-regex": "^1.0.1",
    "cosmiconfig": "^6.0.0",
    "defined": "^1.0.0",
    "minimist": "^1.2.5",
    "postcss": "^8.2.10",
    "postcss-scss": "^2.1.1",
    "postcss-value-parser": "^4.1.0",
    "read-file-stdin": "^0.2.0",
    "string.prototype.repeat": "^1.0.0",
    "vendors": "^1.0.4",
    "write-file-stdout": "0.0.2"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^3.9.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^6.0.0",
    "cross-env": "^2.0.0",
    "del-cli": "^0.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "execa": "^4.0.2",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "terser-webpack-plugin": "^3.0.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "ava": {
    "babel": true,
    "require": "@babel/register"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "**/__tests__"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
